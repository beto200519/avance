<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Adelantado.Perfil"
             Title="login"  NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="Black" Offset="0.0"/>
            <GradientStop Color="Green" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView VerticalOptions="Center" HorizontalOptions="Center">
        <VerticalStackLayout Spacing="20" Padding="20" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">

            <!-- Título -->
            <Label Text="LOGIN" FontSize="30" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />

            <!-- Campo Usuario -->
            <Entry x:Name="txtUsername" Placeholder="Username" TextColor="White"
                   BackgroundColor="Transparent" PlaceholderColor="Gray" />

            <!-- Campo Contraseña -->
            <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True"
                   TextColor="White" BackgroundColor="Transparent" PlaceholderColor="Gray" />

            <!-- Botón de Iniciar Sesión -->
            <Button Text="Sign Up"
                    Clicked="OnLoginClicked"
                    BackgroundColor="Transparent"
                    BorderColor="White"
                    TextColor="White"
                    Padding="10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
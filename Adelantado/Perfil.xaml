<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Adelantado.Perfil"
             Title="perfil"
    NavigationPage.HasNavigationBar="False" >
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="Black" Offset="0.0"/>
            <GradientStop Color="Green" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView VerticalOptions="Center" HorizontalOptions="Center">
        <VerticalStackLayout Spacing="20" Padding="20" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">

            <!-- Título -->
            <Label Text="PROFILE" FontSize="30" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />

            <!-- Nombre -->
            <Label Text="Name:" FontSize="20" TextColor="White"/>
            <Label x:Name="lblName" FontSize="18" TextColor="White"/>

            <!-- Email -->
            <Label Text="Email:" FontSize="20" TextColor="White"/>
            <Label x:Name="lblEmail" FontSize="18" TextColor="White"/>

            <!-- Teléfono -->
            <Label Text="Phone:" FontSize="20" TextColor="White"/>
            <Label x:Name="lblPhone" FontSize="18" TextColor="White"/>

            <!-- Matrícula -->
            <Label Text="Matricula:" FontSize="20" TextColor="White"/>
            <Label x:Name="lblMatricula" FontSize="18" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>